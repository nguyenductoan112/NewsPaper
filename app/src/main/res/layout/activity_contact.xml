<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenbao"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".user.ContactActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/lienhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Liên Hệ"
                android:textAlignment="center"
                android:textColor="@color/Lavender"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lienhe1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Liên Hệ 1: 0369841862"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lienhe2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Liên Hệ 2: 0981173577"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lienhe3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Liên Hệ 3:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lienhe4"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Liên Hệ 4:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lienhe5"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Liên Hệ 5:"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btncd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/Lavender"
                android:text="Trang cài Đặt"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>