<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenbao"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="30dp"
            android:paddingRight="50dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÀI ĐẶT"
                android:textAlignment="center"
                android:textColor="@color/Lavender"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Lavender"
                android:text="Cài đặt Theme"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btnthem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Lavender"
                android:text="Cài đặt nâng cao"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btnquanly"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Lavender"
                android:text="Quản lý tài khoản"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/sanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="SẢN PHẨM"
                android:textAlignment="center"
                android:textColor="@color/Lavender"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnlienhe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/Lavender"
                android:text="Liên hệ"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btndksd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Lavender"
                android:text="Điều khoản sử dụng"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btnktra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Lavender"
                android:text="Kiểm tra phiên bản mới"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btntc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/Lavender"
                android:text="Về trang chủ"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>