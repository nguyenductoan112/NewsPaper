<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenbao"
    android:gravity="center"
    tools:context=".user.UserActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/quanly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Quản lý tài khoản"
                android:textAlignment="center"
                android:textColor="@color/Lavender"
                android:textSize="32sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:text="Họ tên:"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/Lavender"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fullnameht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngọc Trang Lê"
                    android:textAlignment="center"
                    android:textColor="@color/dialogplus_black_overlay"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:text="Email:"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/Lavender"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lengoctrang1209@gmail.com"
                    android:textAlignment="center"
                    android:textColor="@color/dialogplus_black_overlay"
                    android:textSize="21dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:text="Số điện thoại:"
                    android:textColor="@color/Lavender"
                    android:textSize="20dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/phoneht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0981173577"
                    android:textAlignment="center"
                    android:textColor="@color/dialogplus_black_overlay"
                    android:textSize="22dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnup"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/Lavender"
                android:text="Chỉnh sửa"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/btnback3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/Lavender"
                android:text="Trang Cài Đặt"
                android:textSize="18sp"
                app:cornerRadius="20dp"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>